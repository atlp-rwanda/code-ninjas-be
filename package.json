{
    "name": "code-ninjas-be",
    "version": "1.0.0",
    "description": "Barefoot Nomad Application Backend",
    "main": "lib/index.js",
    "repository": "https://github.com/atlp-rwanda/code-ninjas-be.git",
    "author": "Code Ninjas from Andela ATLP-6",
    "license": "MIT",
    "scripts": {
        "init-dir": "sequelize init",
        "migrate": "yarn sequelize-cli db:migrate",
        "down": "yarn sequelize-cli db:migrate:undo",
        "seed": "yarn sequelize-cli db:seed:all",
        "unseed": "yarn sequelize-cli db:seed:undo:all",
        "build": "babel src -d lib",
        "start": "cross-env NODE_ENV=production yarn run build && node lib/index.js",
        "dev": "cross-env NODE_ENV=development nodemon --exec babel-node -r dotenv/config src/index.js",
        "lint": "eslint src/*.js --fix",
        "prepare": "husky install",
        "test": "cross-env NODE_ENV=test c8 --reporter=text --reporter=lcov ./node_modules/.bin/mocha --timeout 100000 --exit --require @babel/register"
    },
    "nyc": {
        "include": "src",
        "exclude": "node_modules"
    },
    "dependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.8.4",
        "@babel/node": "^7.8.4",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.8.4",
        "@babel/runtime": "^7.17.8",
        "babel-plugin-istanbul": "^6.0.0",
        "c8": "^7.11.0",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "cors": "^2.8.5",
        "cross-env": "6",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "mocha": "^9.2.2",
        "nyc": "^15.1.0",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.17.0",
        "sequelize-cli": "^6.4.1",
        "supertest": "^6.2.2",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.3.0"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.17.0",
        "@babel/register": "^7.8.3",
        "eslint": "8.1.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.0",
        "istanbul": "^0.4.5",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.0"
    }
}