{
    "name": "code-ninjas-be",
    "type": "module",
    "version": "1.0.0",
    "description": "Global travel and accomodation booking application",
    "main": "src/index.js",
    "repository": "https://github.com/atlp-rwanda/code-ninjas-be.git",
    "author": "Code Ninjas",
    "license": "MIT",
    "scripts": {
        "build": "babel src -d lib",
        "migrate": "npx sequelize-cli db:migrate",
        "down": "npx sequelize-cli db:migrate:undo",
        "makeUserModel": "npx sequelize-cli model:generate --name User --attributes firstname:string,lastname:string,email:string",
        "start": "yarn run build && node lib/index.js",
        "dev": "nodemon -r dotenv/config src/index.js",
        "test": "mocha"
    },
    "dependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.5",
        "@babel/preset-env": "^7.16.11",
        "@babel/register": "^7.17.0",
        "core-js": "^3.21.1",
        "express": "^4.17.3",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.17.0"
    },
    "devDependencies": {
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "dotenv": "^16.0.0",
        "mocha": "^9.2.1",
        "nodemon": "^2.0.15",
        "sequelize-cli": "^6.4.1"
    }
}
