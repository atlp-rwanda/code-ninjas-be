{
    "name": "code-ninjas-be",
    "version": "1.0.0",
    "description": "Barefoot Nomad Application Backend",
    "main": "lib/index.js",
    "repository": "https://github.com/atlp-rwanda/code-ninjas-be.git",
    "author": "Code Ninjas from Andela ATLP-6",
    "license": "MIT",
    "scripts": {
        "init-dir": "sequelize init",
        "migrate": "yarn sequelize-cli db:migrate",
        "down": "yarn sequelize-cli db:migrate:undo",
        "seed": "yarn sequelize-cli db:seed:all",
        "unseed": "yarn sequelize-cli db:seed:undo:all",
        "build": "babel src -d lib",
        "start": "yarn run build && node lib/index.js",
        "dev": "nodemon --exec babel-node -r dotenv/config src/index.js",
        "lint": "eslint src/*.js --fix",
        "prepare": "husky install"
    },
    "dependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.8.4",
        "@babel/node": "^7.8.4",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.8.4",
        "@babel/runtime": "^7.17.8",
        "babel-plugin-istanbul": "^6.0.0",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-latest": "^6.24.1",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "deep-email-validator": "^0.1.21",
        "dotenv": "^16.0.0",
        "ejs": "^3.1.6",
        "express": "^4.17.3",
        "express-session": "^1.17.2",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "passport": "^0.5.2",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth2": "^0.2.0",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.17.0",
        "sequelize-cli": "^6.4.1",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.3.0"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.17.0",
        "@babel/register": "^7.8.3",
        "eslint": "8.1.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.0",
        "istanbul": "^0.4.5",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.0"
    }
}